<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backbround_backplay"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="39" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="967" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="63"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="446"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="88"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutlist"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="879"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/channellist"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="#00000000"
                        android:divider="@drawable/notice_list_divider"
                        android:dividerHeight="1dp"
                        android:visibility="gone" >

                    </ListView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="26"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1325"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="88" >

                    <RadioGroup
                        android:id="@+id/rqselect"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:weightSum="1322" >

                        <RadioButton
                            android:id="@+id/backrq1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="265"
                            android:background="@drawable/radio_tab"
                            android:button="@null"
                            android:text="2013-09-17"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@drawable/tab_color_c"
                            android:textSize="@dimen/rqselect_size"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/backrq2"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="265"
                            android:background="@drawable/radio_tab"
                            android:button="@null"
                            android:checked="true"
                            android:text="2012-05-08"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@drawable/tab_color_c"
                            android:textSize="@dimen/rqselect_size"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/backrq3"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="265"
                            android:background="@drawable/radio_tab"
                            android:button="@null"
                            android:checked="true"
                            android:text="2012-05-08"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@drawable/tab_color_c"
                            android:textSize="@dimen/rqselect_size"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/backrq4"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="265"
                            android:background="@drawable/radio_tab"
                            android:button="@null"
                            android:checked="true"
                            android:text="2012-05-08"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@drawable/tab_color_c"
                            android:textSize="@dimen/rqselect_size"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/backrq5"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="265"
                            android:background="@drawable/radio_tab"
                            android:button="@null"
                            android:text="2012-05-08"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@drawable/tab_color_c"
                            android:textSize="@dimen/rqselect_size"
                            android:textStyle="bold" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutback"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="879"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/backlist"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="#00000000"
                        android:divider="@drawable/notice_list_divider"
                        android:dividerHeight="1dp"
                        android:visibility="gone" >

                    </ListView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="71"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="330" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1590"
                android:gravity="left|center" >

                <TextView
                    android:id="@+id/currdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2013-12-20"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/currdate_size" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>