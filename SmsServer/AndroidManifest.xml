<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.smsserver"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.smsserver.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.smsserver.LoginActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.InfoActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.BaseInfoActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.SmsActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.SmsSetActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.CallActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.CallSetActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.LocActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.LocSetActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.RecordActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.RecordSetActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.PhotoActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.PhotoSetActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.android.smsserver.PhotoViewActivity" android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
