<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backbackground"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/live_channel_list_bg"
            android:orientation="vertical"
            android:paddingRight="@dimen/back_left_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/back_left_title_height"
                android:gravity="center|left"
                android:paddingLeft="@dimen/back_title_padding" >

                <TextView
                    android:id="@+id/appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回放频道"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/baise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/pdlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:dividerHeight="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >

                    <requestFocus />
                </ListView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/program_listbg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/back_right_title_height"
                android:gravity="left|center"
                android:paddingLeft="@dimen/back_title_padding" >

                <TextView
                    android:id="@+id/versioncode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="节目列表"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/baise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioGroup
                    android:id="@+id/timegroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/riqiselect_c"
                        android:button="@null"
                        android:checked="true"
                        android:text="2013-08-08" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/riqiselect_c"
                        android:button="@null"
                        android:checked="false"
                        android:text="2013-08-08"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/riqiselect_c"
                        android:button="@null"
                        android:checked="false"
                        android:text="2013-08-08"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/riqiselect_c"
                        android:button="@null"
                        android:checked="false"
                        android:text="2013-08-08"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/riqiselect_c"
                        android:button="@null"
                        android:checked="false"
                        android:text="2013-08-08"/>
                  </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/jmlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>